{{#if loggedIn}}
  
  <div class="hull-friends">
    {{#if friends}}
      <ul class="hull-friends__list">
        {{#friends}}
          <li class="hull-friends__list__item">
            <div class="hull-media">
              <div class="hull-media__img">
                <img class="img-rounded" src="{{picture}}" alt="{{name}}">
              </div>
              <div class="hull-media__body">
                <h4 class="hull-friends__name">{{name}}</h4>
                <span class="hull-friends__created">Member since {{fromNow created_at}}</span>
              </div>
            </div>
          </li>
        {{/friends}}
      </ul>
    {{/if}}

    {{^friends}}
	<div class="row">
		<div class="span12">
		 <h3>Oh... no friends :(</h3>
		 <p class="lead">If you had some it'd look a little like this..</p>
		</div>
		<div class="span8">
		<div class="media">
		              <a class="pull-left" href="#">
		                <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 64px; height: 64px;" src="data:image/png;base64,">
		              </a>
		              <div class="media-body">
		                <h4 class="media-heading">Awesome Name</h4>
						<p>Member since: 02/02/2013</p>
		              </div>
		            </div>
		</div>
	</div>
     </div>
    {{/friends}}
  </div>
  
{{else}}
 <h3>You kinda need to login first...</h3>
 
{{/if}}