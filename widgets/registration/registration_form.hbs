
<div class="hull-registration">

  <form class="hull-form hull-registration__form" id="{{formId}}">

    <ul class="hull-form__fields">
      {{#fields}}
        <li class="hull-form__fields__item hull-form__fields__item--{{type}}">
            <label for="hull-form-{{name}}" class="hull-form__label">{{label}}</label>

            {{#ifEqual type "text"}}

                <input
                  class="hull-form__text-input"
                  data-hull-input
                  type="{{type}}"
                  id="hull-form-{{name}}"
                  name="{{name}}"
                  value="{{value}}"
                  placeholder="{{placeholder}}"
                  {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                  {{#if pattern}}pattern="{{pattern}}"{{/if}}
                  {{#if required}}required{{/if}}
                  {{#if error}}data-error-message="{{error}}"{{/if}}
                />

            {{/ifEqual}}

            {{#ifEqual type "email"}}

                <input class="hull-form__text-input hull-form__text-input--email"
                  data-hull-input
                  type="{{type}}"
                  id="hull-form-{{name}}"
                  name="{{name}}"
                  value="{{value}}"
                  placeholder="{{placeholder}}"
                  {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                  {{#if pattern}}pattern="{{pattern}}"{{/if}}
                  {{#if required}}required{{/if}}
                  {{#if error}}data-error-message="{{error}}"{{/if}}
                />

            {{/ifEqual}}

            {{#ifEqual type "url"}}

                <input class="hull-form__text-input hull-form__text-input--email"
                  data-hull-input
                  type="{{type}}"
                  id="hull-form-{{name}}"
                  name="{{name}}"
                  value="{{value}}"
                  placeholder="{{placeholder}}"
                  {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                  {{#if pattern}}pattern="{{pattern}}"{{/if}}
                  {{#if required}}required{{/if}}
                  {{#if error}}data-error-message="{{error}}"{{/if}}
                />

            {{/ifEqual}}

            {{#ifEqual type "tel"}}

                <input class="hull-form__text-input hull-form__text-input--email"
                  data-hull-input
                  type="{{type}}"
                  id="hull-form-{{name}}"
                  name="{{name}}"
                  value="{{value}}"
                  placeholder="{{placeholder}}"
                  {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                  {{#if pattern}}pattern="{{pattern}}"{{/if}}
                  {{#if required}}required{{/if}}
                  {{#if error}}data-error-message="{{error}}"{{/if}}
                />

            {{/ifEqual}}

            {{#ifEqual type "select"}}
                <select class="hull-form__select"
                data-hull-input
                type="{{type}}"
                id="hull-form-{{name}}"
                name="{{name}}"
                {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                {{#if pattern}}pattern="{{pattern}}"{{/if}}
                {{#if required}}required{{/if}}
                {{#if error}}data-error-message="{{error}}"{{/if}}>
                  {{#options}}
                      <option
                        label="{{label}}"
                        value="{{value}}"
                        {{#ifEqual ../value value}}selected{{/ifEqual}}
                      >{{value}}</option>
                  {{/options}}
                </select>
            {{/ifEqual}}

            {{#ifEqual type "checkbox"}}
                <label>
                  <input class="hull-form__checkbox"
                    data-hull-input
                    type="{{type}}"
                    id="hull-form-{{name}}"
                    name="{{name}}"
                    {{#ifEqual value "true"}}checked{{/ifEqual}}
                    placeholder="{{placeholder}}"
                    {{#if autocomplete}}autocomplete="{{autocomplete}}"{{/if}}
                    {{#if pattern}}pattern="{{pattern}}"{{/if}}
                    {{#if required}}required{{/if}}
                    {{#if error}}data-error-message="{{error}}"{{/if}}
                  />
                  {{checkboxLabel}}
                </label>
            {{/ifEqual}}

            <div id="hull-form-{{name}}-error" class="hull-form__error"></div>
        </li>

        {{/fields}}

      <li class="hull-form__fields__item hull-form__fields__item--submit">
        <input type="submit" data-hull-action="submit" class="hull-btn hull-btn--primary" value="Register" />
      </li>

    </ul>
  </form>
</div>
